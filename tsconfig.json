{
	"extends": "adonis-preset-ts/tsconfig.json",
	"include": [
		"**/*"
	],
	"exclude": [
		"node_modules",
		"build",
		".docker"
	],
	"compilerOptions": {
		"outDir": "build",
		"rootDir": "./",
		"sourceMap": false,
		"experimentalDecorators": true,
		"paths": {
			"App/*": [
				"./app/*"
			],
			"Config/*": [
				"./config/*"
			],
			"Contracts/*": [
				"./contracts/*"
			],
			"Database/*": [
				"./database/*"
			],
			"Types/*": [
				"app/Types/*"
			],
			"Providers/*": [
				"./providers/*"
			]
		},
		"types": [
			"@adonisjs/core",
			"@adonisjs/repl",
			"@japa/preset-adonis/build/adonis-typings",
			"@adonisjs/auth",
			"@adonisjs/redis",
			"@adonisjs/session",
			"@adonisjs/mail",
			"adonis5-swagger",
			"@adonisjs/view",
			"@adonisjs/shield",
			"@adonisjs/bouncer"
		]
	}
}