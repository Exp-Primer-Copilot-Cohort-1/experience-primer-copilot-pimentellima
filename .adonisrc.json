{
	"typescript": true,
	"commands": [
		"./commands",
		"@adonisjs/core/build/commands/index.js",
		"@adonisjs/repl/build/commands",
		"@adonisjs/mail/build/commands",
		"adonis5-swagger/build/commands",
		"@adonisjs/bouncer/build/commands"
	],
	"exceptionHandlerNamespace": "App/Exceptions/Handler",
	"aliases": {
		"App": "app",
		"Config": "config",
		"Database": "database",
		"Contracts": "contracts"
	},
	"preloads": [
		"./start/routes",
		"./start/kernel",
		"./start/validator",
		"./start/bouncer",
		{
			"file": "./start/events",
			"environment": [
				"web"
			]
		},
		"./start/limiter"
	],
	"providers": [
		"./providers/AppProvider",
		"./providers/MongooseProvider",
		"@adonisjs/core",
		"@adonisjs/auth",
		"@adonisjs/redis",
		"@adonisjs/session",
		"@adonisjs/mail",
		"adonis5-swagger",
		"@adonisjs/view",
		"@adonisjs/shield",
		"@adonisjs/bouncer",
		"@adonisjs/limiter"
	],
	"aceProviders": [
		"@adonisjs/repl"
	],
	"tests": {
		"suites": [
			{
				"name": "functional",
				"files": [
					"tests/functional/**/*.spec(.ts|.js)"
				],
				"timeout": 60000
			}
		]
	},
	"testProviders": [
		"@japa/preset-adonis/TestsProvider"
	],
	"metaFiles": [
		{
			"pattern": "resources/views/**/*.edge",
			"reloadServer": false
		},
		{
			"pattern": "public/*",
			"reloadServer": false
		},
		{
			"pattern": ".env",
			"reloadServer": false
		},
		{
			"pattern": "certs/*",
			"reloadServer": false
		},
		{
			"pattern": "ecosystem.config.js",
			"reloadServer": false
		},
		{
			"pattern": "docs/*",
			"reloadServer": false
		}
	]
}